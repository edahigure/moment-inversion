.ce
\fB\s+2Appendix B: Filter Parameters\s-2\fR
.sp 0.25i
.ta 0.25i 1.5i 3.0i
.nf
.ad
	\fBParameter	Default	Comment\fR

\fBCommon to All Filters\fR
	scale=\fI(flt)\fR	1.0	scale plot
	xscale=\fI(flt)\fR	1.0	scale x-direction (affected by scale)
	yscale=\fI(flt)\fR	1.0	scale y-direction (affected by scale)
	xorig=\fI(flt)\fR	0.0 inches	x-origin (not affected by scale)
	yorig=\fI(flt)\fR	0.0 inches	y-origin (not affected by scale)
	pagerot=\fI(flt)\fR	0.0 degees	page rotation (only 0, 90, 180, 270)
	label=\fI(str)\fR	"" (no label)	label for plot
	quick=\fI(int)\fR	0	plot quickness (0 is everything)
	window \fI(boo)\fR	window	use (no use) user clip windows
	pause=\fI(int)\fR	0 secs	pause time in pause() is called in program
	textscale=\fI(flt)\fR	1.0	text scale
	symscale=\fI(flt)\fR	1.0	symbol scale
	symfill=\fI(boo)\fR	1 	fill symbols (or hollow if symfill=0)

\fBver -Versatec V-80\fR
	squirt=\fI(flt)\fR	\05.0 inches	paper advance at end of plot
	xpagelen=\fI(flt)\fR	11.0 inches	page length
	ypagelen=\fI(flt)\fR	8.5 inches	page length
	wid=\fI(flt)\fR	11.0 inches	page width

\fBima -Imagen P8/300\fR
	paper=\fI(str)\fR	"reg"	paper size (others are "legal")
	xpagelen=\fI(flt)\fR	11.0 inches	page length
	ypagelen=\fI(flt)\fR	10.5 inches	page length
	pagewid=\fI(flt)\fR	\08.5 inches	page width

\fBjup -Jupiter 7+\fR
	reset \fI(boo)\fR	noreset	reset Jupiter in start up
	erase \fI(boo)\fR	noerase	erase Jupiter in start up/between plots

